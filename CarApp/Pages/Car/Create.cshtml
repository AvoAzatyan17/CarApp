@page
@model CarApp.Pages.Car.Create

@{
    ViewData["Title"] = "Car List";
    Layout = "Shared/_Layout";
}
<div class="container mt-4">
    <h2 class="mb-4">Add New Car</h2>
    <form method="post" asp-page-handler="Create">
        <div class="mb-3">
            <label for="Name" class="form-label">Car Name</label>
            <input type="text" id="Name" name="Car.Name" class="form-control" placeholder="Enter car name" required />
        </div>
        <div class="mb-3">
            <label for="MarkId" class="form-label">Car Mark</label>
            <select id="MarkId" class="form-select my-select2-car-mark" name="Car.MarkId" required>
                <option value="">Select a mark</option>
                @foreach (var mark in Model.Marks)
                {
                    <option value="@mark.Id">@mark.Name</option>
                }
            </select>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary me-2">Save</button>
            <a asp-page="/Car/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
