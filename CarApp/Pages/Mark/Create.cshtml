@page
@model CarApp.Pages.Mark.Create

@{
    ViewData["Title"] = "Add New Car";
    Layout = "Shared/_Layout";
}

<div class="container mt-4">
    <h2>Add New Mark</h2>
    <form method="post" asp-page-handler="Create">
        <div class="mb-3">
            <label for="Name" class="form-label">Mark Name</label>
            <input type="text" id="Name" name="Mark.Name" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/Mark/Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

