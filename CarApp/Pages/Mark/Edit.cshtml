@page
@model CarApp.Pages.Mark.Edit

@{
    ViewData["Title"] = "Edit Mark";
    Layout = "Shared/_Layout";
}

<div class="container mt-5">
    <h2>Edit Mark</h2>
    <form method="post">
        <input type="hidden" asp-for="Mark.Id" />
        <div class="mb-3">
            <label asp-for="Mark.Name" class="form-label"></label>
            <input asp-for="Mark.Name" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/Mark/Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>