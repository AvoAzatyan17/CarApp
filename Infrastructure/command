dotnet ef migrations add Initial --startup-project .\CommitteeMeetings.Host\ --project .\CommitteeMeetings.Infrastructure\ --context CommitteeMeetingsDbContext -o .\Migrations\

dotnet ef database update --startup-project .\CommitteeMeetings.Host\ --project .\CommitteeMeetings.Infrastructure\ --context CommitteeMeetingsDbContext

